<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base minimalista para Android TV -->
    <style name="Theme.XcloudTV2025" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Apenas as cores básicas do AppCompat -->
        <item name="colorPrimary">@color/xcloud_blue</item>
        <item name="colorPrimaryDark">@color/xcloud_blue_dark</item>
        <item name="colorAccent">@color/xcloud_cyan</item>

        <!-- Cores de fundo básicas -->
        <item name="android:windowBackground">@color/xcloud_dark_gray</item>
        <item name="android:colorBackground">@color/xcloud_dark_gray</item>

        <!-- Status bar transparente -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <!-- Configurações básicas de janela -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>